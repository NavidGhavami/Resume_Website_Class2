@model Resume.Domain.Dtos.User.FilterUserDto

@{
    ViewData["Title"] = "لیست کاربران";
}



<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-white">
        <ul class="breadcrumb breadcrumb-style" style="float:right;">
            <li class="breadcrumb-item">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </li>
            <li class="breadcrumb-item bcrumb-1">
                <a asp-area="Administration" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> داشبورد</a>
            </li>
            <li class="breadcrumb-item bcrumb-2">
                <a href="#" onclick="return false;">لیست کاربران</a>
            </li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <strong>جستجو</strong> کاربران
                            </h2>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <input type="text" id="name" class="form-control">
                                            <label class="form-label">نام و نام خانوادگی</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-4 col-xs-6">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <input type="text" id="desc" class="form-control">
                                            <label class="form-label">تلفن همراه</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group form-float">
                                        <div class="form-line">
                                            <button type="submit" class="btn btn-dark btn-block submit m-3">جستجو</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="col-md-12">
    <div class="table-responsive m-t-40">
        <table class="table table-hover table-striped">
            <div class="form-line">
                <a asp-area="Administration" asp-controller="User" asp-action="CreateUser" class="btn btn-success submit m-3">ایجاد کاربر جدید</a>
            </div>
            <thead class="bg-dark text-white">
            <tr>
                <th class="text-center">ردیف</th>
                <th class="text-center">تصویر</th>
                <th class="text-center">نام و نام خانوادگی</th>
                <th class="text-center">شماره همراه</th>
                <th class="text-center">ایمیل</th>
                <th class="text-center">وضعیت</th>
                <th class="text-center">تاریخ ایجاد</th>
                <th class="text-center">عملیات</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="text-center">1</td>
                <td class="table-img text-center">
                    <img src="~/AdminSite/assets/images/products/p-13.jpg" alt="">
                </td>
                <td class="text-center">نوید قوامی </td>
                <td class="text-center">09337878585</td>
                <td class="text-center">navid.ghavami1994@gmail.com</td>
                <td class="text-center">
                    <i class="material-icons text-success">check_circle</i>
                </td>
                <td class="text-center">یکشنبه 4 آذر 1403</td>
                <td class="text-center">
                    <a class="btn btn-warning" asp-area="Administration" asp-controller="User" asp-action="EditUser">
                        <i class="material-icons ">mode_edit</i>
                    </a>
                    <a class="btn btn-danger">
                        <i class="material-icons">block</i>
                    </a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

