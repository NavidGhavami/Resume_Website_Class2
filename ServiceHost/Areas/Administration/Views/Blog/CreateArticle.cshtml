@model Resume.Application.Dtos.Blog.Article.CreateArticleDto
@{
    ViewData["Title"] = "ایجاد مقاله جدید";
}


<partial name="_AdminJqueryValidators" />


<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ul class="breadcrumb breadcrumb-style" style="float : right;">
            <li class="breadcrumb-item">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </li>
            <li class="breadcrumb-item bcrumb-1">
                <a asp-area="Administration" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>داشبورد
                </a>
            </li>
            <li class="breadcrumb-item bcrumb-2">
                <a href="#" onclick="return false;">مدیریت مقاله ها</a>
            </li>
            <li class="breadcrumb-item active">ایجاد مقاله جدید</li>
        </ul>
    </div>
</div>

<div class="card p-5">
    <h2 class="card-inside-title" style="font-size : 22px; margin-top : 15px; margin-bottom:25px;">فرم ایجاد مقاله</h2>
    <form asp-area="Administration" asp-controller="Blog" asp-action="CreateArticle" method="post" enctype="multipart/form-data">
        <div class="row clearfix">
            <div class="col-sm-4">
                <div class="form-group">
                    <div class="form-line">
                        <input type="text" asp-for="ArticleTitle" class="form-control mb-4" placeholder="عنوان مقاله">
                        <span asp-validation-for="ArticleTitle" class="text-danger "></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        <select class="form-control" asp-for="CategoryId" asp-items='new SelectList(ViewBag.Category, "CategoryId", "ArticleCategoryTitle")'>
                            <option value="0">دسته مقاله مورد نظر را انتخاب نمایید...</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>آپلود تصویر مقاله</span>
                                <input asp-for="ArticleImage" type="file" multiple="">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="یک فایل را آپلود کنید">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="form-line">
                        <input type="text" asp-for="ShortDescription" class="form-control mb-4" placeholder="توضیحات کوتاه">
                        <span asp-validation-for="ShortDescription" class="text-danger "></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        <textarea asp-for="Description" class="form-control mb-4" placeholder="توضیحات"></textarea>
                        <span asp-validation-for="Description" class="text-danger "></span>
                    </div>
                </div>
            </div>
            <button class="btn btn-success btn-block" type="submit">ثبت اطلاعات</button>
        </div>
    </form>
</div>
