@model Resume.Domain.Entities.Skills.CreateSkillDto


@{
    ViewData["Title"] = "ایجاد مهارت جدید";
}


<partial name="_AdminJqueryValidators" />


<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ul class="breadcrumb breadcrumb-style" style="float : right;">
            <li class="breadcrumb-item">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </li>
            <li class="breadcrumb-item bcrumb-1">
                <a asp-area="Administration" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i>داشبورد
                </a>
            </li>
            <li class="breadcrumb-item bcrumb-2">
                <a href="#" onclick="return false;">مدیریت مهارت ها</a>
            </li>
            <li class="breadcrumb-item active">ایجاد مهارت جدید</li>
        </ul>
    </div>
</div>

<div class="card p-5">
    <h2 class="card-inside-title" style="font-size : 22px; margin-top : 15px; margin-bottom:25px;">فرم ایجاد مهارت جدید</h2>
    <form asp-area="Administration" asp-controller="Resume" asp-action="CreateSkill" method="post">
        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="form-line">
                        <input type="text" asp-for="SkillTitle" class="form-control mb-4" placeholder="عنوان مهارت">
                        <span asp-validation-for="SkillTitle" class="text-danger "></span>

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <div class="form-line">
                        <input type="text" asp-for="SkillPercent" class="form-control mb-4" placeholder="درصد توانایی مهارت">
                        <span asp-validation-for="SkillPercent" class="text-danger "></span>

                    </div>
                </div>
            </div>
            <button class="btn btn-success btn-block" type="submit">ثبت اطلاعات</button>
        </div>
    </form>
</div>
