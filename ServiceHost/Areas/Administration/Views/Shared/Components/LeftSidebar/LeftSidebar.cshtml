                        <img src="~/uploads/@user.Avatar" alt="profile">
                    </div>
                    <div class="profile-info">
                        <h3>@user.Fullname عزیز، </h3>
                        <p>خوش آمدید !</p>
                    </div>
                </div>
            </li>
            <li class="active">
                <a href="#" onClick="return false;" class="menu-toggle">
                    <i class="menu-icon ti-home"></i>
                    <span>صفحه اصلی</span>
                </a>
                <ul class="ml-menu">
                    <li class="active">
                        <a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="#" onClick="return false;" class="menu-toggle">
                    <i class="menu-icon ti-shopping-cart-full"></i>
                    <span>مدیریت کاربران</span>
                </a>
                <ul class="ml-menu">
                    <li>
                        <a asp-area="Administration" asp-controller="User" asp-action="UserList" >لیست کاربران</a>
                    </li>
                </ul>
            </li>
            
            <li>
                <a href="#" onClick="return false;" class="menu-toggle">
                    <i class="menu-icon fas fa-school"></i>
                    <span>مدیریت رزومه</span>
                </a>
                <ul class="ml-menu">
                    <li>
                        <a asp-area="Administration" asp-controller="Resume" asp-action="FilterEducations" >لیست تحصیلات</a>
                    </li>
                    <li>
                        <a asp-area="Administration" asp-controller="Resume" asp-action="FilterExperience" >لیست سابقه شغلی</a>
                    </li>
                    <li>
                        <a asp-area="Administration" asp-controller="Resume" asp-action="FilterSkills" >لیست مهارت ها</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <!-- #Menu -->
</aside>